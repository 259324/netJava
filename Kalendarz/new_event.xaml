<Window x:Class="Kalendarz.new_event"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kalendarz"
      mc:Ignorable="d" 
      Height="200" Width="200"
      Title="new_event">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="Nw" Content="Dodaj nowe wydarzenie" HorizontalAlignment="Center" Grid.Row="0"   VerticalAlignment="Center"/>
        <DatePicker HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" />
        <TextBox Name="nazwa_TB" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap"  VerticalAlignment="Center" Text="Nazwa wydarzenia" FontWeight="UltraLight" Foreground="#FF898989"  />
        <TextBox Name="opis_TB" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap"  VerticalAlignment="Center" Text="Opis wydarzenia" FontWeight="UltraLight" Foreground="#FF898989"   />
        <Button Name="Dodaj_BT" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Content="DODAJ" Click="Dodaj_BT_Click" />
    </Grid>

</Window>
