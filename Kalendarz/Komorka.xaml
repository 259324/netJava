<Page x:Class="Kalendarz.Komorka"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kalendarz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Komorka">
    <Border BorderBrush="Black" BorderThickness="1" Margin="2,2,2,2">

        <Grid Name="Values"   Background="#FF240B27">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
            <Label Name="dayLabel" Content="0" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="White"/>
            <StackPanel x:Name="eventsPanel" Orientation="Vertical" Grid.Row="0" Grid.Column="0" Width="Auto">

            </StackPanel>
    </Grid>
      </Border>
</Page>
